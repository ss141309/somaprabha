---
import { getCollection, render } from "astro:content";

import Layout from "../../layouts/Layout.astro";
import NavBar from "../../components/NavBar.astro";
import Tags from "../../components/Tags.astro";
import TableOfContents from "../../components/TableOfContents.astro";

import "../../styles/katex.min.css";

const { post } = Astro.props;
const { Content, headings } = await render(post);

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { id: post.id },
    props: { post },
  }));
}

const formattedDate = post.data.pubDate.toLocaleDateString("en-GB", {
    day: "2-digit",
    month: "2-digit",
    year: "numeric"
});

const author = "समीरसिंह";
const title = `${post.data.title} - Sōmaprabʰa`;
const canonicalUrl = new URL(Astro.url.pathname, Astro.site);

---

<Layout author={author} canonicalUrl={canonicalUrl} description={post.data.description} keywords={post.data.tags?.join(', ')} title={title}>
  <NavBar />
  <article>
    <header class="post-header">
      <h1>{post.data.title}</h1>
      <meta-data>
        <time datetime={post.data.pubDate.toISOString()} class="pub-date">
            {formattedDate}
        </time>
        <Tags post={post}/>
      </meta-data>
    </header>

    <TableOfContents headings={headings} />

    <content-body>
      <Content />
    </content-body>
  </article>
</Layout>

<style>
  @font-face {
      font-family: "IoskeleyMono";
      src: url("/fonts/IoskeleyMono/IoskeleyMono-Regular.woff2") format("woff2");
      font-weight: normal;
      font-style: normal;
      font-display: swap;
  }

  .post-header {
      margin-bottom: 2rem;
      border-bottom: 1px solid #eee;
      padding-bottom: 1.5rem;
  }

  h1 {
      margin-bottom: 0.5rem;
      font-size: 2.5rem;
  }

  meta-data {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      gap: 1.5rem;
      margin-top: 1rem;
  }

  .pub-date {
      font-family: monospace;
      color: #666;
      font-size: 1rem;
  }

  content-body {
      display: block;
      line-height: 1.7;
      font-size: 1.1rem;
      color: #333;
  }

  content-body :global(code) {
      font-family: IoskeleyMono;
  }

  content-body :global(img) {
      max-width: 100%;
      height: auto;
      border-radius: 8px;
  }

  content-body :global(a) {
      text-decoration: none;
      color: inherit;
      border-bottom: 1px solid #b71c1c;
  }

  content-body :global(a:hover) {
      color: white;
      background-color: #b71c1c;
      box-shadow: 0 0 0 2px #b71c1c;
  }

  content-body {
      counter-reset: h1-counter;
  }

  content-body :global(h1) {
      counter-increment: h1-counter;
      counter-reset: h2-counter;
      margin-top: 1.5em;
  }

  content-body :global(h1)::before {
      content: counter(h1-counter) ". ";
      color: #b71c1c;
      font-weight: bold;
      margin-right: 8px;
  }

  content-body :global(h2) {
      counter-increment: h2-counter;
      counter-reset: h3-counter;
      margin-top: 1.25em;
  }

  content-body :global(h2)::before {
      content: counter(h1-counter) "." counter(h2-counter) ". ";
      color: #b71c1c;
      font-weight: bold;
      margin-right: 8px;
  }

  content-body :global(h3) {
      counter-increment: h3-counter;
      margin-top: 1em;
  }

  content-body :global(h3)::before {
      content: counter(h1-counter) "." counter(h2-counter) "." counter(h3-counter) " ";
      color: #b71c1c;
      font-weight: bold;
      margin-right: 8px;
  }

  content-body :global(h1 a), content-body :global(h2 a), content-body :global(h3 a) {
      color: inherit;
      text-decoration: none;
      border-bottom: none;
  }

  content-body :global(h1 a:hover), content-body :global(h2 a:hover), content-body :global(h3 a:hover) {
      background-color: transparent;
      color: #b71c1c;
      padding: 0;
      box-shadow: none;
  }

  content-body :global(.astro-code) {
      border: 6px double black;
      padding: 10px;
      font-size: 0.8rem;
  }
</style>
